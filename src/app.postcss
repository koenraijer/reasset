@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	@apply h-full overflow-hidden text-surface-900-50-token text-lg;
}

input {
	@apply input border-none p-0 m-0 !bg-transparent rounded-none h-full w-full focus:outline-none text-base text-center placeholder:text-base
}

button {
	@apply btn variant-filled text-surface-50-900-token
}

label {
	@apply label flex items-center
}

span {
	@apply text-surface-900-50-token
}

input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button { 
  -webkit-appearance: none; 
}

input[type=number] {
  -moz-appearance: textfield;
}

td:has(input) {
	@apply relative
}
td:has(input)::after {
	content: url('/pen.svg')
	@apply absolute top-0 right-0 h-full w-8 flex items-center justify-center
}

.table {
	@apply !bg-surface-50-900-token
}

.table tbody tr {
	background-color: rgb(var(--color-surface-500) / 0.02);
}

.table-interactive tbody tr {
	@apply hover:bg-secondary-hover-token even:hover:bg-secondary-hover-token cursor-pointer;
}

ol li #numberSpan {
	@apply bg-black rounded-full h-6 w-6 flex items-center justify-center text-surface-50-900-token mr-2
}

ol li {
	@apply py-1
}

.accordion-control {
	@apply bg-surface-200-700-token rounded-lg hover:bg-surface-100-800-token text-black
}

.accordion {
	@apply p-4 bg-surface-100-800-token rounded-lg
}